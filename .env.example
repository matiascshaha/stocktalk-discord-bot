# ============================================================================
# REQUIRED CREDENTIALS - Must be filled in before running
# See docs/CREDENTIALS_SETUP.md for detailed instructions
# ============================================================================

# Discord Configuration (REQUIRED)
# Get token: See docs/CREDENTIALS_SETUP.md section 1
# Get channel ID: Enable Developer Mode, right-click channel â†’ "Copy Channel ID"
DISCORD_TOKEN=your_discord_token_here
CHANNEL_ID=1234567890

# AI Provider Configuration (REQUIRED - Choose ONE provider)
# See docs/AI_PROVIDER_COMPARISON.md for provider recommendations
# Recommended: OpenAI GPT-4o mini (best cost/performance)

# Option 1: OpenAI (Recommended - Best cost/performance)
# Get key: https://platform.openai.com/api-keys
AI_PROVIDER=openai
OPENAI_API_KEY=sk-proj-your-key-here

# Option 2: Anthropic Claude (Best quality, higher cost)
# Get key: https://console.anthropic.com/settings/keys
# AI_PROVIDER=anthropic
# ANTHROPIC_API_KEY=sk-ant-your-key-here

# Option 3: Google Gemini (Good middle ground)
# Get key: https://console.cloud.google.com/apis/credentials
# AI_PROVIDER=google
# GOOGLE_API_KEY=AIzaSy-your-key-here

# Optional: override config location or AI prompt path
# Relative paths resolve from repository root
# CONFIG_PATH=/full/path/to/config/trading.yaml
# AI_PROMPT_FILE=config/ai_parser.prompt
# Optional: override output paths (relative paths resolve from repo root)
# DATA_DIR=data
# PICKS_LOG_PATH=data/picks_log.jsonl
# OPENAI_MODEL=gpt-4o
# ANTHROPIC_MODEL=claude-sonnet-4-5
# GOOGLE_MODEL=gemini-3-pro-preview

# Optional test/smoke flags (default safe profile keeps live/write checks off)
# TEST_MODE=local
# TEST_AI_LIVE=0
# TEST_AI_SCOPE=sample
# TEST_DISCORD_LIVE=0
# TEST_WEBULL_READ=0
# TEST_WEBULL_WRITE=0
# TEST_WEBULL_ENV=paper
# TEST_AI_PROVIDERS=openai,anthropic,google
# TEST_BROKERS=webull

# ============================================================================
# OPTIONAL CREDENTIALS - Only needed if AUTO_TRADE=true
# Skip these until your Webull developer account is approved
# ============================================================================

# Webull Configuration (OPTIONAL - Only for auto-trading)
# Uses Webull OpenAPI (App Key + App Secret)
# Leave blank if AUTO_TRADE=false or account not approved yet
WEBULL_APP_KEY=your_webull_app_key
WEBULL_APP_SECRET=your_webull_app_secret
WEBULL_REGION=US
# Optional overrides
# WEBULL_ACCOUNT_ID=your_account_id
# WEBULL_CURRENCY=USD
# WEBULL_ACCOUNT_TAX_TYPE=GENERAL

# ============================================================================
# CONFIGURATION SETTINGS - Adjust as needed (defaults shown)
# Tip: You can also set these in config/trading.yaml (preferred for non-secret settings)
# ============================================================================

# Trading Settings
# AUTO_TRADE: Enable automatic trading (start with false for testing!)
AUTO_TRADE=false
# PAPER_TRADE: Simulate trades without executing (true = simulation, false = real trades)
# Only used if AUTO_TRADE=true. Always use true for testing/validation!
PAPER_TRADE=true
# MIN_CONFIDENCE: Minimum AI confidence (0.0-1.0) to execute trade
MIN_CONFIDENCE=0.7
# DEFAULT_AMOUNT: Default trade size in USD if no weight specified
DEFAULT_AMOUNT=1000
# USE_MARKET_ORDERS: true = market orders, false = limit orders
USE_MARKET_ORDERS=true
# EXTENDED_HOURS_TRADING: true = allow extended-hours trading (if supported)
# EXTENDED_HOURS_TRADING=false
# TIME_IN_FORCE: DAY or GTC (varies by region/account)
# TIME_IN_FORCE=DAY

# Notification Settings
# DESKTOP_NOTIFICATIONS: Show desktop popup alerts
DESKTOP_NOTIFICATIONS=true
# SOUND_ALERT: Play sound on new stock pick detected
SOUND_ALERT=true
# COPY_TO_CLIPBOARD: Auto-copy ticker to clipboard
COPY_TO_CLIPBOARD=true
